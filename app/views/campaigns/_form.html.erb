<%= render 'shared/error_messages', object: @campaign %>

<%= form_for @campaign, html: { class: 'form-horizontal' } do |f| %>

  <div class="row-fluid">
    <div class="span10">

      <div class="control-group">
        <%= f.label :name, class: 'control-label' %>
        <div class="controls"><%= f.text_field :name, class: 'span6' %></div>
      </div>

        <div class="control-group">
          <%= f.label :from, class: 'control-label' %>
          <div class="controls"><%= f.text_field :from, class: 'span6' %></div>
        </div>

        <div class="control-group">
          <%= f.label :reply_to, class: 'control-label' %>
          <div class="controls"><%= f.text_field :reply_to, class: 'span6' %></div>
        </div>

        <div class="control-group">
          <%= f.label :subject, class: 'control-label' %>
          <div class="controls"><%= f.text_field :subject, class: 'span6' %></div>
        </div>

        <div class="control-group">
          <%= f.label :body, class: 'control-label' %>
          <div class="controls"><%= f.text_area :body, class: 'span6 input-xlarge', id: 'html', rows: '10', placeholder: 'HTML code of this email' %></div>
        </div>

        <div class="control-group">
          <%= f.label :body_txt, class: 'control-label' %>
          <div class="controls"><%= f.text_area :body_txt, class: 'span6' %></div>
        </div>

        <div class="control-group">
          <%= f.label :list_id, class: 'control-label' %>
          <div class="controls"><%= f.select :list_id, options_for_select(List.all.map { |l| [l.name, l.id] }) %></div>
        </div>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Ok', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', campaigns_path, class: 'btn btn-icon btn-default circle_remove' %>
  </div>
<% end %>
