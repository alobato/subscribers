<h1>Import to <%= @list.name %></h1>

<hr class="separator">
<%= link_to raw('<i class="icon-arrow-left"></i> Back'), lists_path, class: 'btn' %>
<hr class="separator">

<%= form_tag import_list_path(@list), html: { class: 'form-horizontal' } do %>

  <div class="control-group">
    <%= label_tag :emails, 'Emails', class: 'control-label' %>
    <div class="controls"><%= text_area_tag :emails, nil, class: 'span6', style: 'height:400px' %></div>
  </div>

<div class="form-actions">
  <%= submit_tag 'Ok', class: 'btn btn-icon btn-primary circle_ok' %>
  <%= link_to 'Cancelar', lists_path, class: 'btn btn-icon btn-default circle_remove' %>
</div>

<% end %>
